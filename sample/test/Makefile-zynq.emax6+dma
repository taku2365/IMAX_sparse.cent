PROJTOP	      = /home/takuya-s/IMAX_sparse.cent/
OPTION        = -mstrict-align -DDEBUG -DCYCLECNT -DARMZYNQ -DEMAX6 -DFPDDMA
PROGRAM       = test025-zynq.emax6+dma
CPP           = cpp -P
CC            = gcc
CFLAGS        = -I. -O2 $(OPTION)
AS            = as
ASFLAGS       = 
LD            = gcc
LDFLAGS       =  -L../../src/emax6_sparselib/
LIBS          = -lm -lc -lX11 -lXext -lsparse
LIBFLAGS      = 
OBJS	      =	test024-emax6.o test025-emax6.o
INCLUDE = -I../../src/emax6_sparselib/Include
all:		$(PROGRAM)
SHARED_LINK = 0
SHARED_PATH =
LINK_FORMAT = static




test025-emax6.o: $(PROJTOP)/src/conv-c2c/emax6.h $(PROJTOP)/src/conv-c2c/emax6lib.c ../../src/emax6_sparselib/Include/emax6_sparselib.h

test025-zynq.emax6+dma:     test025-emax6.o
		$(CC) $(INCLUDE)  $(LDFLAGS) -o $@ $< $(LIBFLAGS) $(LIBS)

test025-emax6.o:	test025-emax6.c sparse_lib
		$(CC) $(INCLUDE)  $(CFLAGS) -c $<

test025-emax6.c:	test025.c
		perl $(PROJTOP)/src/conv-mark/conv-mark $< > $<-mark.c
		$(CPP) $(OPTION) $(INCLUDE)  $<-mark.c > $<-cppo.c
		$(PROJTOP)/src/conv-c2c/conv-c2c $<-cppo.c



test025-emax6.o: $(PROJTOP)/src/conv-c2c/emax6.h $(PROJTOP)/src/conv-c2c/emax6lib.c ../../src/emax6_sparselib/Include/emax6_sparselib.h


